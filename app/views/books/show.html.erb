<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<% if @book_comment.errors.any? %>
		        <%= @book_comment.errors.count %>件のerrorが発生しました
		        <% @book_comment.errors.full_messages.each do |message| %>
		        <%= message %>
		    	<% end %>
		    <% end %>
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<h2>New book</h2>
			<%= render 'books/newform', book: Book.new %>
		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
					<tr>
						<td>
							<%= link_to (@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, @book %></td>
						<td><%= @book.body %></td>

						<% if @book.favorited_by?(current_user) %>
						<td><%= link_to book_favorites_path(@book), method: :delete do %>
						      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
						      <%= @book.favorites.count %> いいね</td>
    						<% end %>

   							  <% else %>
   						<td>
   							<%= link_to book_favorites_path(@book), method: :post do %>
						      <i class="far fa-heart" aria-hidden="true"></i>
						      <%= @book.favorites.count %> いいね</td>
						    <% end %>
						<% end %>
						<td>コメント数：<%= @book.book_comments.count %></td>

						<td><% if @book.user == current_user %><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %><% end %></td>
						<td><% if @book.user == current_user %><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %><% end %></td>
					</tr>
					  <div class="row">
							<% @book.book_comments.each do |comment| %>
							<tr>
								<td class="col-xs-2 active">コメ主</td>
								<td class="col-xs-6"><%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><%= comment.user.name %></td>
							</tr>
							<tr>
								<td class="active">投稿日時</td>
								<td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
							</tr>
							<tr>
								<td class="active">コメ文</td>
								<td><%= comment.comment %></td>
							</tr>
							<tr>
								<td><% if comment.user == current_user %>
									<%= link_to "Destroy",book_book_comments_path(comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{comment.id}" %>
									<% end %></td>
									<!-- resourceバージョン -->
							</tr>
							<!-- <td><%# if comment.user == current_user %> -->
									<%#= link_to "Destroy",book_book_comment_path(comment.book.id, comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{comment.id}" %>
									<!-- <%# end %></td> -->
									<!-- resourcesバージョン -->
							<% end %>
					  </div>
					<div class="row">
						<%= form_for [@book, @book_comment] do |f| %>
						    <div class="row">
						        <div class="col-sm-12">
						            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
						        </div>
						    </div>
						    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
						<% end %>
					</div>
				</div>
			</table>
		</div>
	</div>
</div>
